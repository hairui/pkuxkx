#class mapi open
#alias {mp.start} {
	#class mp.inner open;
	#ticker {hit} {
		hit lxiao npc;
		#delay {1} {
			perform flatter.qiurao;
			halt;
		};
	} {3};
	#alias {attack} {#cr};
	#alias {wi} {#cr};
	#class mp.inner close;
	#nop jifa parry flatter;
};

#alias {mp.stop} {
	#class mp.inner kill;
	#alias {attack} {attack.normal};
	#alias {wi} {wi_normal};
};
#class mapi close