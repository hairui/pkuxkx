};

#alias {map_goto_rest} {
	map.go {厢房};
};

#alias {map_goto_start} {
	map.go {大理寺};
};

#alias {map_goto_shifu} {
	map.go {都亭驿};
};

#alias {chan} {
	unwi;
	perform cuff.fengtian;
	wi;
};

#alias {xl.start} {
	xiulian bixue-xinfa;
	show_to_quest 修炼内功;
	#action {顿觉内功修为增进不小} {xiulian yunu-xinfa};
	#action {由于缺乏实战经验} {
		xl.stop;
	};
};

#alias {xl.stop} {
	show_to_quest 修炼结束;
	#unaction {顿觉内功修为增进不小};
	#unaction {由于缺乏实战经验};
}

#list my_weapons create {staff};

#alias {qudu} {
	#send {qudu};
	#delay {1} {#send {qudu}};
	#delay {2} {#send {qudu}};
};

#alias {perform_special} {
	#send {special energy};
};

