#class gumu_spec open

#alias {attack.prepare} {
	yun powerup;
};

#alias {attack.normal} {
	beng;
	#class attack.inner open;
	#ticker {perf_chan} {
		chan;
	} {1};
	#ticker {beng} {
		beng;
	} {6};	
	#ticker {zuoshou} {
		zuoshou;
	} {5};
	#class attack.inner close;
};

#alias {attack.xiaofeng} {
	#class attack.inner open;
	#ticker {perf_chan} {
		chan;
	} {1};
	#class attack.inner close;
};

#alias {attack.mingjiao} {
	#class attack.inner open;
	#ticker {perf_chan} {
		chan;
	} {1};
	#ticker {qixing} {
		qixing;
	} {1.5};
	#ticker {zuoshou} {
		zuoshou
	} {1};		
	#class attack.inner close;
};

#macro {\eOP} {
	chan;
};

#macro {\eOQ} {
	beng;
};

#macro {\eOR} {
	huxiao
};

#macro {\eOS} {
	zuoshou;
};

#macro {\e[15~} {
	qixing;
};

#alias {zuoshou} {
	unwi;
	wield blade;
	jiali 10;
	perform blade.zuoshou;
	jiali none;
	wi;
};

#alias {qixing} {
	unwi;
	perform hand.qixing;
	wi;
};

#alias {huxiao} {
	unwi;
	perform cuff.huxiao;
	wi;
};

#alias {beng} {
	unwi;
	wield staff;
	perform staff.beng;
	wi;
};

#alias {chan_robber} {
	unwi;
	perform cuff.fengtian;
	wi;
};

#alias {load_map} {
	map.load hangzhou;
};

