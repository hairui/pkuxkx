#class wudang_spec open
#alias {attack.prepare} {
	yun powerup;
	#class attack.inner open;
	#ticker {poqi} {
		pfm poqi;
	} {2.8};
	#class attack.inner close;
};

#alias {attack.bare} {
	pfm poqi;
	#class attack.inner open;
	#ticker {po} {
		zongjue;
	} {3.8};
	#class attack.inner close;
};

#alias {attack.end} {
	#var with_weapon 1;	
};

#action {{对方是空手|对方没有使用兵器}} {
	#var with_weapon 0;
};

#action {对方不是空手} {
	#var with_weapon 1;
};

#var with_weapon 1;
#alias {po} {
	#if {${with_weapon} == 1} {
		pobing;
	};
	#else {
		pozhang;
	};
};

#alias {attack.normal} {
	pfm poqi;
	pfm po;
	pfm zongjue;
	#class attack.inner open;
	#ticker {pobing} {
		pfm po;
	} {3.8};
	#class attack.inner close;
};

#alias {attack.hubiao} {
	#class attack.inner open;

	#class attack.inner close;
};

#alias {attack.xiaofeng.qin} {
	pfm poqi;
	pfm po;
	pfm sqf;
	pfm feilong;
	#class attack.inner open;
	#ticker {po} {
		pfm po;
	} {6.8};	
	#class attack.inner close;
};

#alias {attack.xiaofeng.sheng} {
	pfm poqi;
	pfm po;
	pfm sqf;
	#class attack.inner open;
	#ticker {po} {
		pfm po;
	} {6.8};
	#class attack.inner close;
};

#alias {attack.xiaofeng.quan} {
	pfm poqi;
	pfm po;
	pfm sqf;
	#class attack.inner open;
	#ticker {po} {
		pfm po;
	} {6.8};
	#class attack.inner close;
};

#alias {attack.mingjiao} {
	pfm poqi feilong zongjue;
	#class attack.inner open;
	#ticker {zongjue} {
		pfm zongjue;
	} {2.8};
	#ticker {feilong} {
		pfm feilong;
	} {6.8};	
	#class attack.inner close;
};

