#class wudang_spec open
#alias {attack.prepare} {
    yun powerup;
    #class attack.inner open;
    #class attack.inner close;
};

#alias {attack} {
    pfm chan;
    #if {"${quest}" == "hb"} {
    };
    #elseif {${mj_started}  == 1} {
        pfm poqi;
        pfm feilong;
        #class attack.inner open;
        #ticker {zongjue} {
            pfm zongjue;
        } {3.8};
        #ticker {feilong} {
            pfm feilong;
        } {6.8};
        #class attack.inner close;
    };
    #else {
        #if {${xf.type} == -1 || ${xf.type} == 1} {
            pfm poqi;
            pfm chan;
            pfm jianzhang;
            #class attack.inner open;
            #ticker {poqi} {
                pfm poqi;
            } {3.8};
            #ticker {jz} {
                pfm jianzhang;
            } {5.8};
            #class attack.inner close;
        };
        #elseif {${xf.type} == 2} {
            pfm poqi;
            pfm zongjue;
            #class attack.inner open;
            #ticker {poqi} {
                pfm poqi;
            } {2.8};
            #class attack.inner close;
        };
        #elseif {${xf.type} == 3} {
            pfm poqi;
            pfm zongjue;
            #class attack.inner open;
            #ticker {poqi} {
                pfm poqi;
            } {2.8};
            #class attack.inner close;
        };
        #else {
            pfm poqi;
            pfm kuangfeng;
            #class attack.inner open;
            #ticker {poqi} {
                pfm poqi;
            } {2.8};
            #class attack.inner close;
        };
    };
};


#alias {attack.end} {
    #var with_weapon 1;
};

#action {{对方是空手|对方没有使用兵器}} {
    #var with_weapon 0;
};

#action {对方不是空手} {
    #var with_weapon 1;
};

#var with_weapon 1;
#alias {po} {
